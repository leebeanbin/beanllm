# ===========================================
# beanllm Playground Frontend Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# cp .env.local.example .env.local

# ===========================================
# Backend API URL
# ===========================================
# Local development
NEXT_PUBLIC_API_URL=http://localhost:8000

# If backend is running in Docker:
# NEXT_PUBLIC_API_URL=http://localhost:8000

# ===========================================
# WebSocket URL (for real-time features)
# ===========================================
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ===========================================
# Feature Flags
# ===========================================
# Enable/disable features in the UI
NEXT_PUBLIC_ENABLE_AGENTIC_MODE=true
NEXT_PUBLIC_ENABLE_GOOGLE_SERVICES=true
NEXT_PUBLIC_ENABLE_STREAMING=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true
NEXT_PUBLIC_ENABLE_VOICE_INPUT=true
NEXT_PUBLIC_ENABLE_MONITORING=true

# ===========================================
# Default Settings
# ===========================================
NEXT_PUBLIC_DEFAULT_MODEL=qwen2.5:0.5b
NEXT_PUBLIC_DEFAULT_TEMPERATURE=0.7
NEXT_PUBLIC_DEFAULT_MAX_TOKENS=2048

# ===========================================
# UI Configuration
# ===========================================
NEXT_PUBLIC_APP_NAME=beanllm Playground
NEXT_PUBLIC_SHOW_TOKEN_USAGE=true
NEXT_PUBLIC_SHOW_RESPONSE_TIME=true

# ===========================================
# Analytics (Optional)
# ===========================================
# NEXT_PUBLIC_ANALYTICS_ID=

# ===========================================
# Development
# ===========================================
# Enable debug mode for more verbose logging
NEXT_PUBLIC_DEBUG=false
